@model HomeDetailsViewModel
    <!--Declare the address of the layout page-->
@{
    ViewBag.Title = "Employee Details";

}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/noimage.jpeg" />

                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4>Deparment: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>

            </div>
        </div>
    </div>
</div> 

<!--Add section previously declared in the _Layout file-->
@section Scripts{
    <script src="~/js/Custom.js"></script>
}
