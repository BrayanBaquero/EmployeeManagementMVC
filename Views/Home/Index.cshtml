@model IEnumerable<Employee>

<!--Declare the address of the layout page-->
@{ 
    ViewBag.Title= "Employee List";

}

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Department</td>
                </tr>
                }
            </tbody>
        </table>
   
